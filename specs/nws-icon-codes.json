  "categories": {
    "sky": {
      "name": "Sky Conditions",
      "description": "Cloud coverage levels without precipitation",
      "codes": ["skc", "few", "sct", "bkn", "ovc"]
    },
    "wind": {
      "name": "Windy Conditions",
      "description": "Sky conditions combined with windy weather",
      "codes": ["wind_skc", "wind_few", "wind_sct", "wind_bkn", "wind_ovc"]
    },
    "precipitation": {
      "name": "Precipitation",
      "description": "Rain, snow, ice, and thunderstorms",
      "codes": ["rain", "rain_showers", "rain_showers_hi", "tsra", "tsra_sct", "tsra_hi", "snow", "sleet", "fzra"]
    },
    "precipitation-mixed": {

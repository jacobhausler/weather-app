  "priorities": {
    "1": {
      "level": "Critical",
      "description": "Most common conditions, required for basic functionality",
      "codes": ["skc", "few", "sct", "bkn", "ovc", "rain", "tsra", "snow"]
    },
    "2": {
      "level": "Important",
      "description": "Common conditions that should be supported",
      "codes": ["wind_skc", "wind_few", "wind_sct", "wind_bkn", "wind_ovc", "rain_showers", "rain_showers_hi", "tsra_sct", "tsra_hi", "fog", "sleet", "fzra"]
    },
    "3": {
      "level": "Useful",
      "description": "Less common but important conditions",
      "codes": ["rain_snow", "rain_sleet", "snow_sleet", "rain_fzra", "snow_fzra", "dust", "smoke", "haze", "blizzard"]
    },
    "4": {
      "level": "Rare",
      "description": "Rare or special conditions",
      "codes": ["tornado", "hurricane", "tropical_storm", "hot", "cold"]
    }
  },
  "urlPattern": {
    "base": "https://api.weather.gov/icons",
    "format": "{base}/{set}/{timeOfDay}/{condition}",
    "parameters": {
      "set": ["land", "marine"],
      "timeOfDay": ["day", "night"],
      "condition": "Icon code from the list above",
      "size": ["small", "medium", "large"]
    },
    "examples": [
      "https://api.weather.gov/icons/land/day/skc?size=medium",
      "https://api.weather.gov/icons/land/night/tsra?size=medium",
      "https://api.weather.gov/icons/land/day/tsra_hi,40?size=medium",
      "https://api.weather.gov/icons/land/day/sct,0/rain,40?size=medium"
    ]
  },
  "splitIconFormat": {
    "description": "Icons can represent changing conditions within a forecast period",
    "pattern": "{condition1}[,{percentage1}]/{condition2}[,{percentage2}]",
    "examples": [
      "tsra_hi,20/tsra_hi,50",
      "sct,0/rain,40",
      "few/tsra,30"
    ],
    "interpretation": {
      "split": "Two 6-hour segments within a 12-hour period",
      "percentage": "Probability of precipitation (0-100)",
      "order": "First segment is earlier, second is later"
    }
  },
  "metarAbbreviations": {
    "SKC": "Sky Clear",
    "FEW": "Few (1-2 oktas)",
    "SCT": "Scattered (3-4 oktas)",
    "BKN": "Broken (5-7 oktas)",
    "OVC": "Overcast (8 oktas)",
    "TSRA": "Thunderstorms and Rain",
    "FZRA": "Freezing Rain",
    "SHRA": "Rain Showers",
    "FG": "Fog",
    "HZ": "Haze",
    "RA": "Rain"
  },
  "oktaScale": {
    "0": "SKC - Sky Clear",
    "1-2": "FEW - Few clouds",
    "3-4": "SCT - Scattered clouds",
    "5-7": "BKN - Broken clouds",
    "8": "OVC - Overcast"

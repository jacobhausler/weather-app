      "codes": ["rain_snow", "rain_sleet", "snow_sleet", "rain_fzra", "snow_fzra"]
    },
    "visibility": {
      "name": "Visibility Conditions",
      "description": "Fog, dust, smoke, and haze affecting visibility",
      "codes": ["fog", "dust", "smoke", "haze"]
    },
    "severe": {
      "name": "Severe Weather",
      "description": "Severe and dangerous weather conditions",
      "codes": ["blizzard", "tornado", "hurricane", "tropical_storm"]
    },
    "temperature": {
      "name": "Temperature Extremes",
      "description": "Extreme hot or cold conditions",
      "codes": ["hot", "cold"]
    }

{
  "name": "weather-app-server",
  "version": "1.0.0",
  "description": "Backend server for HAUS Weather Station - fetches and caches NWS weather data",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "weather",
    "nws",
    "api",
    "cache"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/node-cron": "^3.0.11",
    "@types/suncalc": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
